<script>
// StorPunk website navigation script - FIXED VERSION

// Function to handle section switching
function showSection(sectionId) {
  // Hide all content sections
  const sections = document.querySelectorAll(".content-section");
  sections.forEach((section) => {
    section.classList.remove("active");
  });

  // Show the selected section
  const selectedSection = document.getElementById(sectionId);
  if (selectedSection) {
    selectedSection.classList.add("active");
  }

  // Scroll to the top of the page smoothly
  window.scrollTo({
    top: 0,
    behavior: "smooth",
  });

  // Update active state in navigation
  const navLinks = document.querySelectorAll("nav ul li a");
  navLinks.forEach((link) => {
    // Remove any styling that might indicate active state
    link.classList.remove("active");

    // Add active class to the clicked link
    if (link.getAttribute("onclick").includes(sectionId)) {
      link.classList.add("active");
    }
  });
}

// Create the code rain animation
function createCodeRain() {
  const codeRain = document.getElementById("codeRain");
  const characters = "01";
  const fontSize = 14;

  if (!codeRain) return;

  // Calculate how many columns we need
  const width = window.innerWidth;
  const height = window.innerHeight;
  const columns = Math.floor(width / fontSize);

  // Create initial drops
  let drops = [];
  for (let i = 0; i < columns; i++) {
    drops[i] = Math.floor((Math.random() * height) / fontSize);
  }

  // Create the animation
  function drawRain() {
    let html = "";

    for (let i = 0; i < drops.length; i++) {
      // Random character
      const char = characters.charAt(
        Math.floor(Math.random() * characters.length),
      );

      // Calculate position
      const x = i * fontSize;
      const y = drops[i] * fontSize;

      // Create span with random opacity
      const opacity = Math.random() * 0.5 + 0.3;
      html += `<span style="position:absolute; left:${x}px; top:${y}px; color:#00ff00; opacity:${opacity};">${char}</span>`;

      // Move drop down
      drops[i]++;

      // Reset drop position if it's off screen
      if (drops[i] * fontSize > height && Math.random() > 0.975) {
        drops[i] = 0;
      }
    }

    codeRain.innerHTML = html;
    setTimeout(drawRain, 100);
  }

  drawRain();
}

// Enhanced FAQ accordion functionality that works for both nested (FAQ) and flat (Join) structures
function initFAQAccordions() {
  console.log("Initializing FAQ accordions...");

  const categoryToggles = document.querySelectorAll(".category-toggle");
  const questionToggles = document.querySelectorAll(".question-toggle");

  console.log(
    `Found ${categoryToggles.length} categories and ${questionToggles.length} questions`,
  );

  // Accordion behavior for FAQ categories - only one category open at a time
  categoryToggles.forEach((toggle) => {
    toggle.addEventListener("change", function () {
      console.log("Category toggle:", this.id, this.checked);
      if (this.checked) {
        // Close all other categories
        categoryToggles.forEach((otherToggle) => {
          if (otherToggle !== this) {
            otherToggle.checked = false;
          }
        });

        // Close all questions in other categories (if categories exist)
        if (categoryToggles.length > 0) {
          questionToggles.forEach((questionToggle) => {
            const questionCategory = questionToggle.closest(".faq-category");
            const currentCategory = this.closest(".faq-category");
            if (
              questionCategory &&
              currentCategory &&
              questionCategory !== currentCategory
            ) {
              questionToggle.checked = false;
            }
          });
        }
      }
    });
  });

  // Enhanced question accordion behavior - handles both nested and flat structures
  questionToggles.forEach((toggle) => {
    toggle.addEventListener("change", function () {
      console.log("Question toggle:", this.id, this.checked);
      if (this.checked) {
        // Handle nested structure (with categories)
        const currentCategory = this.closest(".faq-category");
        if (currentCategory) {
          // Close all other questions in the same category
          const categoryQuestions =
            currentCategory.querySelectorAll(".question-toggle");
          categoryQuestions.forEach((otherQuestion) => {
            if (otherQuestion !== this) {
              otherQuestion.checked = false;
            }
          });
        } else {
          // Handle flat structure (no categories) - close all other questions
          questionToggles.forEach((otherQuestion) => {
            if (otherQuestion !== this) {
              otherQuestion.checked = false;
            }
          });
        }
      }
    });
  });

  console.log("FAQ accordions initialized successfully");
}

// Initialize everything when the page loads
window.onload = function () {
  console.log("Page loaded, initializing components...");

  // Initialize FAQ accordions with enhanced logic that works for both structures
  initFAQAccordions();

  // Initialize code rain animation
  createCodeRain();

  // Show the introduction section by default
  showSection("introduction");

  console.log("All components initialized");
};

// Display current time in Eastern Australia (Sydney timezone)
function updateCurrentTime() {
  const now = new Date();
  const dateStr = now.toLocaleDateString("en-AU", {
    timeZone: "Australia/Sydney",
    weekday: "short",
    day: "2-digit",
    month: "short",
    year: "numeric",
  });

  const timeStr = now.toLocaleTimeString("en-AU", {
    timeZone: "Australia/Sydney",
    hour: "2-digit",
    minute: "2-digit",
    second: "2-digit",
    hour12: false,
  });

  const tz = now
    .toLocaleTimeString("en-AU", {
      timeZone: "Australia/Sydney",
      timeZoneName: "short",
    })
    .split(" ")
    .pop();

  // comma + normal space + zero-width space
  const final = `${dateStr},&#32;&#8203;${timeStr} ${tz}`;

  const el = document.getElementById("current-time");
  if (el) el.innerHTML = final;
}

setInterval(updateCurrentTime, 1000);
updateCurrentTime();

// Key-blocks functionality
function copyKey(keyValue) {
  // Try to use the modern Clipboard API
  if (navigator.clipboard && window.isSecureContext) {
    navigator.clipboard
      .writeText(keyValue)
      .then(() => {
        showCopyFeedback("Key copied to clipboard!");
      })
      .catch(() => {
        fallbackCopyText(keyValue);
      });
  } else {
    fallbackCopyText(keyValue);
  }
}

function fallbackCopyText(text) {
  // Fallback for older browsers or non-secure contexts
  const textArea = document.createElement("textarea");
  textArea.value = text;
  textArea.style.position = "fixed";
  textArea.style.left = "-999999px";
  textArea.style.top = "-999999px";
  document.body.appendChild(textArea);
  textArea.focus();
  textArea.select();

  try {
    document.execCommand("copy");
    showCopyFeedback("Key copied to clipboard!");
  } catch (err) {
    showCopyFeedback("Unable to copy key. Please select and copy manually.");
  }

  document.body.removeChild(textArea);
}

function showCopyFeedback(message) {
  // Create or update feedback element
  let feedback = document.getElementById("copy-feedback");
  if (!feedback) {
    feedback = document.createElement("div");
    feedback.id = "copy-feedback";
    feedback.style.cssText = `
      position: fixed;
      top: 20px;
      right: 20px;
      background: var(--text-accent, #00e4e4);
      color: var(--primary-bg, #080818);
      padding: 10px 15px;
      border-radius: 5px;
      z-index: 10000;
      font-family: var(--font-primary, monospace);
      font-weight: bold;
      opacity: 0;
      transition: opacity 0.3s ease;
    `;
    document.body.appendChild(feedback);
  }

  feedback.textContent = message;
  feedback.style.opacity = "1";

  setTimeout(() => {
    feedback.style.opacity = "0";
  }, 2000);
}

function toggleKey(keyDisplayId) {
  const keyDisplay = document.getElementById(keyDisplayId);
  if (!keyDisplay) return;

  const fullSpan = keyDisplay.querySelector(".key-full");
  const truncatedSpan = keyDisplay.querySelector(".key-truncated");
  const toggleBtn = keyDisplay.parentNode.querySelector(".toggle-btn");

  if (!fullSpan || !truncatedSpan || !toggleBtn) return;

  const isCurrentlyTruncated = keyDisplay.classList.contains("truncated");

  if (isCurrentlyTruncated) {
    // Show full key
    keyDisplay.classList.remove("truncated");
    fullSpan.style.display = "inline";
    truncatedSpan.style.display = "none";
    toggleBtn.textContent = "🙈 Hide";
  } else {
    // Show truncated key
    keyDisplay.classList.add("truncated");
    fullSpan.style.display = "none";
    truncatedSpan.style.display = "inline";
    toggleBtn.textContent = "👁 Show Full";
  }
}

// Error handling and debugging
window.addEventListener("error", function (e) {
  console.error("JavaScript Error:", e.error);
  console.error("Error message:", e.message);
  console.error("Error at:", e.filename, "line", e.lineno);
});

// Export for testing
if (typeof module !== "undefined" && module.exports) {
  module.exports = {
    initFAQAccordions,
    showSection,
    createCodeRain,
    copyKey,
    toggleKey,
  };
}
</script>
</body></html>
